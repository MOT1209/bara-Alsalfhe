{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "تشغيل السيرفر (Server)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "فتح اللعبة في المتصفح (Chrome)",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "تشغيل اللعبة كاملة (Full Game)",
            "configurations": [
                "تشغيل السيرفر (Server)",
                "فتح اللعبة في المتصفح (Chrome)"
            ]
        }
    ]
}